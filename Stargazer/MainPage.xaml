<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Stargazer.MainPage"
    BackgroundColor="#121212">

    <ContentPage.Resources>
        <Style
            x:Key="ButtonStyle"
            TargetType="Button">

            <Setter
                Property="BackgroundColor"
                Value="#459F88" />

            <Setter
                Property="TextColor"
                Value="White" />

        </Style>

        <Style
            x:Key="PrimaryLabelStyle"
            TargetType="Label">

            <Setter
                Property="TextColor"
                Value="White" />

        </Style>

        <Style
            x:Key="SecondaryLabelStyle"
            TargetType="Label">

            <Setter
                Property="TextColor"
                Value="#B0B0B0" />

        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="0,0"
            VerticalOptions="Start">

            <Image
                x:Name="zoomImage"
                HeightRequest="400"
                Aspect="Center"
                Source="https://apod.nasa.gov/apod/image/2308/TripleIceland_Zarzycka_1080.jpg" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>